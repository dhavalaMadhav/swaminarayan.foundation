<header class="admin-topbar" style="
    background: linear-gradient(135deg, #1E3A8A 0%, #DC2626 100%);
    color: white;
    padding: 20px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 20px rgba(30, 58, 138, 0.2);
">
    <div class="dashboard-content" style="
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    ">
        <!-- University Logo -->
        <div style="
            display: flex;
            align-items: center;
            gap: 15px;
        ">
            <div style="
                width: 50px;
                height: 50px;
                background: linear-gradient(135deg, #FBBF24, white);
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 24px;
                color: #1E3A8A;
                font-weight: 800;
                box-shadow: 0 4px 15px rgba(251, 191, 36, 0.3);
            ">
                SU
            </div>
            <div>
                <h3 style="
                    font-size: 20px;
                    font-weight: 800;
                    margin: 0;
                    letter-spacing: -0.5px;
                    font-family: 'Montserrat', sans-serif;
                ">Swaminarayan University</h3>
                <p style="font-size: 13px; margin: 0; opacity: 0.9; font-weight: 500;">Admin Panel</p>
            </div>
        </div>

        <!-- Admin Info & Actions -->
        <div style="
            display: flex;
            align-items: center;
            gap: 20px;
        ">
            <!-- Notifications -->
            <button style="
                background: rgba(255,255,255,0.2);
                border: 2px solid rgba(255,255,255,0.3);
                border-radius: 12px;
                width: 50px;
                height: 50px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 18px;
                cursor: pointer;
                transition: all 0.3s ease;
                position: relative;
            " title="Notifications">
                <i class="fas fa-bell"></i>
                <span style="
                    position: absolute;
                    top: -5px;
                    right: -5px;
                    background: #FBBF24;
                    color: #1E3A8A;
                    border-radius: 50%;
                    width: 20px;
                    height: 20px;
                    font-size: 11px;
                    font-weight: 700;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                ">3</span>
            </button>

            <!-- Admin Profile -->
            <div style="
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 12px 20px;
                background: rgba(255,255,255,0.15);
                border-radius: 25px;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255,255,255,0.2);
                cursor: pointer;
                transition: all 0.3s ease;
            ">
                <div style="
                    width: 40px;
                    height: 40px;
                    background: linear-gradient(135deg, #FBBF24, #DC2626);
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 16px;
                    font-weight: 700;
                    color: white;
                    border: 2px solid white;
                ">
                    <%= admin.name.charAt(0).toUpperCase() %>
                </div>
                <div>
                    <div style="
                        font-size: 14px;
                        font-weight: 700;
                        margin-bottom: 2px;
                    "><%= admin.name %></div>
                    <div style="
                        font-size: 11px;
                        opacity: 0.9;
                        text-transform: uppercase;
                        letter-spacing: 0.5px;
                    "><%= admin.role %></div>
                </div>
            </div>

            <!-- Logout -->
            <a href="/admin/logout" style="
                padding: 15px 30px;
                background: rgba(255,255,255,0.2);
                color: white;
                text-decoration: none;
                border-radius: 12px;
                font-weight: 700;
                font-size: 14px;
                text-transform: uppercase;
                letter-spacing: 1px;
                font-family: 'Montserrat', sans-serif;
                border: 2px solid rgba(255,255,255,0.3);
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
                gap: 10px;
            ">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>
</header>
