<%- include('../partials/student-header', { 
  title: 'Apply for Admission - Swaminarayan University', 
  student: student
}) %>
<style>
    .apply-page {
        min-height: calc(100vh - 80px);
        background: linear-gradient(135deg, rgba(30, 58, 138, 0.03), rgba(220, 38, 38, 0.02));
    }

    /* Hero Section */
    .application-hero {
        background: linear-gradient(135deg, #1E3A8A, #1E40AF);
        padding: 50px 0 40px;
        margin-bottom: 40px;
    }

    .application-hero-content {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        text-align: center;
    }

    .application-hero h1 {
        font-size: clamp(28px, 5vw, 48px);
        font-weight: 800;
        color: white;
        margin-bottom: 15px;
        letter-spacing: -1px;
        text-transform: uppercase;
    }

    .application-hero h1 .highlight {
        color: #FBBF24;
    }

    .application-hero p {
        font-size: clamp(14px, 2vw, 16px);
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
    }

    /* Progress Indicator - LINE AT EXACT CENTER OF NUMBER BOXES */
    .progress-indicator {
        background: #ffffff;
        padding: 30px 0;
        margin-bottom: 40px;
        border-bottom: 2px solid #e5e5e5;
    }

    .progress-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .progress-box {
        border: 2px solid #e5e5e5;
        padding: 30px 15px 50px; /* Extra bottom padding for labels */
        background: #ffffff;
        position: relative;
        overflow: hidden;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        position: relative;
        align-items: flex-start;
        min-height: 50px; /* Minimum height for step circles */
    }

    /* Background line (full width, gray) - POSITIONED AT EXACT CENTER OF NUMBER BOXES */
    .progress-line-background {
        position: absolute;
        top: 25px; /* Half of 50px circle height */
        left: 0;
        right: 0;
        height: 2px;
        background: #e5e5e5;
        z-index: 1;
        margin: 0 45px; /* Half of first and last circle width (25px + 20px padding adjustment) */
    }

    /* Progress line (animated, green) - POSITIONED AT EXACT CENTER OF NUMBER BOXES */
    .progress-line-progress {
        position: absolute;
        top: 25px; /* Half of 50px circle height */
        left: 45px; /* Start from center of first circle (25px + 20px padding adjustment) */
        height: 2px;
        background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
        z-index: 2;
        transition: width 0.5s ease;
        width: 0%;
    }

    /* Calculate progress line width based on current step */
    /* Line needs to span from center of first circle to center of current step's circle */
    .progress-line-progress[data-step="1"] { width: 0%; }
    .progress-line-progress[data-step="2"] { width: calc(25% - 45px); } /* Adjust for starting offset */
    .progress-line-progress[data-step="3"] { width: calc(50% - 45px); }
    .progress-line-progress[data-step="4"] { width: calc(75% - 45px); }
    .progress-line-progress[data-step="5"] { width: calc(100% - 90px); } /* Full width minus both end adjustments */
    .progress-line-progress[data-step="6"] { width: calc(100% - 90px); }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 3;
        position: relative;
        flex: 1;
        max-width: 80px;
        height: 50px; /* Same height as circle */
    }

    .step-circle {
        width: 50px;
        height: 50px;
        border: 2px solid #e5e5e5;
        background: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: 700;
        color: #666;
        transition: all 0.3s ease;
        position: relative;
        flex-shrink: 0;
        margin: 0 auto; /* Center the circle within the step container */
    }

    .step.active .step-circle {
        border-color: #DC2626;
        background: #DC2626;
        color: #ffffff;
        box-shadow: 0 0 0 4px rgba(220, 38, 38, 0.1);
    }

    .step.completed .step-circle {
        border-color: #10B981;
        background: #10B981;
        color: transparent;
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
    }

    .step.completed .step-circle::before {
        content: '\f00c';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        font-size: 18px;
        color: #ffffff;
        position: absolute;
    }

    .step-label {
        font-size: 11px;
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 60px; /* Below the circle */
        text-align: center;
        word-wrap: break-word;
        overflow-wrap: break-word;
        max-width: 100%;
        position: absolute;
        bottom: -35px; /* Position labels below the progress box */
        left: 0;
        right: 0;
    }

    .step.active .step-label {
        color: #DC2626;
        font-weight: 700;
    }

    .step.completed .step-label {
        color: #10B981;
    }

    /* Form Sections */
    .application-form {
        padding: 40px 0 80px;
    }

    .form-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .form-section {
        background: #ffffff;
        border: 2px solid #e5e5e5;
        padding: 40px;
        display: none;
        animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .form-section.active {
        display: block;
    }

    .section-title {
        font-size: clamp(22px, 3vw, 32px);
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 25px;
        letter-spacing: -1px;
        text-transform: uppercase;
        position: relative;
        padding-bottom: 12px;
        border-bottom: 3px solid #DC2626;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-grid .full-width {
        grid-column: 1 / -1;
    }

    .form-group {
        margin-bottom: 0;
    }

    label {
        display: block;
        font-size: 12px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .required::after {
        content: '*';
        color: #DC2626;
        margin-left: 4px;
    }

    input, select, textarea {
        width: 100%;
        padding: 10px 12px;
        border: 2px solid #e5e5e5;
        background: #ffffff;
        font-family: 'Roboto', sans-serif;
        font-size: 14px;
        color: #1a1a1a;
        transition: all 0.3s ease;
        outline: none;
    }

    input:focus, select:focus, textarea:focus {
        border-color: #DC2626;
    }

    input[readonly] {
        background: #f8f8f8;
        cursor: not-allowed;
    }

    textarea {
        min-height: 80px;
        resize: vertical;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #e5e5e5;
        gap: 15px;
    }

    .btn {
        padding: 12px 28px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid;
        font-family: 'Montserrat', sans-serif;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        background: none;
    }

    .btn-primary {
        background: #DC2626;
        border-color: #DC2626;
        color: white;
    }

    .btn-primary:hover {
        background: transparent;
        color: #DC2626;
    }

    .btn-secondary {
        background: transparent;
        border-color: #666;
        color: #666;
    }

    .btn-secondary:hover {
        background: #666;
        color: white;
    }

    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Upload Section */
    .upload-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .upload-box {
        border: 2px dashed #e5e5e5;
        padding: 25px 15px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        background: #ffffff;
    }

    .upload-box.uploaded {
        border: 2px solid #10B981;
        background: #F0FDF4;
    }

    .upload-box:hover {
        border-style: solid;
        border-color: #DC2626;
    }

    .upload-icon {
        width: 55px;
        height: 55px;
        background: #f8f8f8;
        border: 2px solid #e5e5e5;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 12px;
        transition: all 0.3s ease;
    }

    .upload-box.uploaded .upload-icon {
        background: #10B981;
        border-color: #10B981;
    }

    .upload-icon i {
        font-size: 22px;
        color: #666;
        transition: all 0.3s ease;
    }

    .upload-box.uploaded .upload-icon i {
        color: #ffffff;
    }

    .upload-title {
        font-size: 13px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .upload-box.uploaded .upload-title {
        color: #10B981;
    }

    .upload-info {
        font-size: 11px;
        color: #666;
    }

    .file-input {
        display: none;
    }

    .file-preview {
        margin-top: 12px;
        padding: 10px;
        background: #ffffff;
        border: 2px solid #10B981;
        display: none;
        text-align: left;
    }

    .file-preview.show {
        display: block;
    }

    .file-name {
        font-size: 12px;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 4px;
        word-break: break-all;
    }

    .file-size {
        font-size: 10px;
        color: #059669;
        font-weight: 600;
    }

    /* Success Section */
    .success-section {
        text-align: center;
        padding: 50px 25px;
    }

    .success-circle {
        width: 90px;
        height: 90px;
        background: #10B981;
        border: 4px solid #ffffff;
        margin: 0 auto 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 0 2px #e5e5e5;
    }

    .success-circle i {
        font-size: 36px;
        color: white;
    }

    .success-title {
        font-size: clamp(22px, 4vw, 36px);
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: -1px;
    }

    .success-text {
        font-size: 15px;
        color: #666;
        margin-bottom: 25px;
    }

    .info-box {
        background: #ffffff;
        border: 2px solid #e5e5e5;
        padding: 25px;
        max-width: 500px;
        margin: 0 auto 25px;
        text-align: left;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #e5e5e5;
        gap: 10px;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-size: 12px;
        font-weight: 700;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 14px;
        font-weight: 800;
        color: #1a1a1a;
        text-align: right;
    }

    .status-yellow {
        color: #FBBF24;
    }

    .payment-note {
        font-size: 13px;
        color: #666;
        margin-bottom: 20px;
    }

    /* Payment Methods */
    .payment-methods {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
        max-width: 500px;
        margin: 0 auto;
    }

    .payment-method-card {
        background: #ffffff;
        border: 2px solid #e5e5e5;
        padding: 25px 18px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .payment-method-card:hover {
        border-color: #DC2626;
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(220, 38, 38, 0.1);
    }

    .payment-method-icon {
        width: 60px;
        height: 60px;
        background: #f8f8f8;
        border: 2px solid #e5e5e5;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 12px;
        transition: all 0.3s ease;
    }

    .payment-method-card:hover .payment-method-icon {
        border-color: #DC2626;
        background: #DC2626;
    }

    .payment-method-icon i {
        font-size: 28px;
        color: #666;
        transition: all 0.3s ease;
    }

    .payment-method-card:hover .payment-method-icon i {
        color: #ffffff;
    }

    .payment-method-title {
        font-size: 16px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .payment-method-description {
        font-size: 12px;
        color: #666;
        margin-bottom: 12px;
    }

    .payment-method-badge {
        display: inline-block;
        padding: 5px 10px;
        background: #f8f8f8;
        border: 1px solid #e5e5e5;
        font-size: 10px;
        font-weight: 700;
        color: #666;
        text-transform: uppercase;
    }

    .error-message {
        color: #DC2626;
        font-size: 11px;
        margin-top: 4px;
        display: none;
    }

    .error-message.show {
        display: block;
    }

    /* Bank Details */
    .bank-details-box {
        background: #ffffff;
        border: 2px solid #e5e5e5;
        padding: 20px;
        margin-bottom: 20px;
    }

    .bank-details-title {
        font-size: 16px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 12px;
        text-transform: uppercase;
        padding-bottom: 10px;
        border-bottom: 2px solid #e5e5e5;
    }

    .bank-detail-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #f0f0f0;
        gap: 10px;
    }

    .bank-detail-label {
        font-size: 12px;
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
    }

    .bank-detail-value {
        font-size: 13px;
        font-weight: 700;
        color: #1a1a1a;
        text-align: right;
        word-break: break-word;
    }

    .amount-highlight {
        color: #DC2626;
        font-size: 16px;
    }

    .utr-info-box {
        background: #FEF3C7;
        border: 2px solid #FCD34D;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        gap: 10px;
    }

    .utr-info-box i {
        font-size: 20px;
        color: #F59E0B;
        flex-shrink: 0;
    }

    .utr-info-box p {
        font-size: 12px;
        color: #92400E;
        line-height: 1.6;
        margin: 0;
    }

    /* RESPONSIVE DESIGN */
    @media (max-width: 992px) {
        .application-hero {
            padding: 35px 0 25px;
        }

        .progress-indicator {
            padding: 25px 0;
        }

        .progress-box {
            padding: 18px 12px 45px; /* Adjusted bottom padding */
        }

        .progress-line-background,
        .progress-line-progress {
            top: 22.5px; /* Half of 45px circle */
        }

        .progress-line-background {
            margin: 0 40px;
        }

        .progress-line-progress {
            left: 40px;
        }

        .progress-line-progress[data-step="2"] { width: calc(25% - 40px); }
        .progress-line-progress[data-step="3"] { width: calc(50% - 40px); }
        .progress-line-progress[data-step="4"] { width: calc(75% - 40px); }
        .progress-line-progress[data-step="5"] { width: calc(100% - 80px); }
        .progress-line-progress[data-step="6"] { width: calc(100% - 80px); }

        .step {
            max-width: 70px;
            height: 45px;
        }

        .step-circle {
            width: 45px;
            height: 45px;
            font-size: 13px;
        }

        .step.completed .step-circle::before {
            font-size: 16px;
        }

        .step-label {
            font-size: 10px;
            bottom: -30px; /* Adjusted for smaller box */
        }

        .form-section {
            padding: 35px 25px;
        }

        .upload-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 18px;
        }
    }

    @media (max-width: 768px) {
        .application-hero {
            padding: 30px 0 20px;
        }

        .form-section {
            padding: 25px 18px;
        }

        .form-grid,
        .upload-grid {
            grid-template-columns: 1fr;
        }

        .progress-box {
            padding: 15px 10px 40px;
        }

        .progress-line-background,
        .progress-line-progress {
            top: 21px; /* Half of 42px circle */
        }

        .progress-line-background {
            margin: 0 36px;
        }

        .progress-line-progress {
            left: 36px;
        }

        .progress-line-progress[data-step="2"] { width: calc(25% - 36px); }
        .progress-line-progress[data-step="3"] { width: calc(50% - 36px); }
        .progress-line-progress[data-step="4"] { width: calc(75% - 36px); }
        .progress-line-progress[data-step="5"] { width: calc(100% - 72px); }
        .progress-line-progress[data-step="6"] { width: calc(100% - 72px); }

        .step {
            max-width: 60px;
            height: 42px;
        }

        .step-circle {
            width: 42px;
            height: 42px;
            font-size: 12px;
        }

        .step.completed .step-circle::before {
            font-size: 15px;
        }

        .step-label {
            font-size: 9px;
            bottom: -28px;
            letter-spacing: 0.3px;
        }

        .form-buttons {
            flex-direction: column;
            gap: 12px;
        }

        .btn {
            width: 100%;
            justify-content: center;
            padding: 11px 24px;
        }

        .bank-detail-row {
            flex-direction: column;
            gap: 4px;
        }

        .bank-detail-value {
            text-align: left;
        }

        .info-box {
            padding: 18px;
        }
    }

    @media (max-width: 480px) {
        .progress-box {
            padding: 12px 8px 35px;
        }

        .progress-line-background,
        .progress-line-progress {
            top: 19px; /* Half of 38px circle */
        }

        .progress-line-background {
            margin: 0 32px;
        }

        .progress-line-progress {
            left: 32px;
        }

        .progress-line-progress[data-step="2"] { width: calc(25% - 32px); }
        .progress-line-progress[data-step="3"] { width: calc(50% - 32px); }
        .progress-line-progress[data-step="4"] { width: calc(75% - 32px); }
        .progress-line-progress[data-step="5"] { width: calc(100% - 64px); }
        .progress-line-progress[data-step="6"] { width: calc(100% - 64px); }

        .step {
            max-width: 50px;
            height: 38px;
            gap: 3px;
        }

        .step-circle {
            width: 38px;
            height: 38px;
            font-size: 11px;
            border-width: 2px;
        }

        .step.completed .step-circle::before {
            font-size: 14px;
        }

        .step-label {
            font-size: 8px;
            bottom: -25px;
            letter-spacing: 0.2px;
            line-height: 1.2;
        }

        .form-section {
            padding: 20px 12px;
        }

        .section-title {
            font-size: 20px;
            margin-bottom: 20px;
        }

        .success-circle {
            width: 75px;
            height: 75px;
        }

        .success-circle i {
            font-size: 30px;
        }

        .btn {
            font-size: 11px;
            padding: 10px 20px;
        }
    }

    @media (max-width: 380px) {
        .step {
            max-width: 45px;
            height: 35px;
        }

        .step-circle {
            width: 35px;
            height: 35px;
            font-size: 10px;
        }

        .step.completed .step-circle::before {
            font-size: 12px;
        }

        .step-label {
            font-size: 7px;
            bottom: -22px;
        }

        .progress-line-background,
        .progress-line-progress {
            top: 17.5px; /* Half of 35px circle */
        }

        .progress-line-background {
            margin: 0 30px;
        }

        .progress-line-progress {
            left: 30px;
        }

        .progress-line-progress[data-step="2"] { width: calc(25% - 30px); }
        .progress-line-progress[data-step="3"] { width: calc(50% - 30px); }
        .progress-line-progress[data-step="4"] { width: calc(75% - 30px); }
        .progress-line-progress[data-step="5"] { width: calc(100% - 60px); }
        .progress-line-progress[data-step="6"] { width: calc(100% - 60px); }
    }
</style>

