<script>
let currentStep = 1;
let formData = {};
let uploadedFiles = {};
let submittedApplicationId = null;
let autoSaveTimer = null;
const AUTOSAVE_INTERVAL = 10000;

const coursesByType = {
    diploma: ['Diploma in Computer Science', 'Diploma in Mechanical Engineering', 'Diploma in Civil Engineering'],
    undergraduate: ['B.Tech Computer Science', 'B.Tech Mechanical Engineering', 'B.Sc Physics', 'BBA', 'BCA'],
    postgraduate: ['M.Tech Computer Science', 'MBA', 'M.Sc Physics', 'MCA'],
    phd: ['Ph.D. Computer Science', 'Ph.D. Physics', 'Ph.D. Management']
};

window.addEventListener('DOMContentLoaded', async function() {
    console.log('ðŸš€ Page loaded');
    const statusResult = await checkAndLoadApplicationStatus();
    if (statusResult.skipDraftLoad) {
        startAutoSave();
        return;
    }
    const localStorageLoaded = await loadDraftFromLocalStorage();
    if (!localStorageLoaded) {
        await loadDraftFromDatabase();
    }
    startAutoSave();
});

async function checkAndLoadApplicationStatus() {
    try {
        const response = await fetch('/application/check-status');
        const data = await response.json();

        if (data.success) {
            if (data.redirectTo === 'payment' && data.hasDocuments) {
                currentStep = 5;
                submittedApplicationId = data.applicationId;
                uploadedFiles = { photo: true, idProof: true, certificate: true };
                document.querySelectorAll('.form-section').forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById('step5').classList.add('active');
                document.getElementById('appId').textContent = data.applicationId;
                updateProgress();
                return { skipDraftLoad: true };
            }

            if (data.redirectTo === 'verification') {
                currentStep = 6;
                submittedApplicationId = data.applicationId;
                document.querySelectorAll('.form-section').forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById('step6').classList.add('active');
                updateProgress();
                return { skipDraftLoad: true };
            }

            if (data.redirectTo === 'complete') {
                window.location.href = '/student/dashboard';
                return { skipDraftLoad: true };
            }
        }
    } catch (error) {
        console.error('âŒ Error checking status:', error);
    }
    return { skipDraftLoad: false };
}

async function loadDraftFromLocalStorage() {
    try {
        const localDraft = localStorage.getItem('applicationDraft');
        if (!localDraft) return false;

        const draft = JSON.parse(localDraft);
        restoreFormData(draft);
        currentStep = draft.currentStep || 1;
        submittedApplicationId = draft.applicationId || null;

        document.querySelectorAll('.form-section').forEach(section => {
            section.classList.remove('active');
        });
        document.getElementById('step' + currentStep).classList.add('active');
        updateProgress();
        return true;
    } catch (error) {
        console.error('âŒ Error loading from localStorage:', error);
        return false;
    }
}

async function loadDraftFromDatabase() {
    try {
        const response = await fetch('/application/load-draft');
        if (response.status === 404) return false;

        const data = await response.json();
        if (data.success && data.draft) {
            restoreFormData(data.draft);
            currentStep = data.draft.currentStep || 1;
            submittedApplicationId = data.draft.applicationId || null;

            const draftData = {
                ...data.draft,
                currentStep: currentStep,
                lastSaved: new Date().toISOString()
            };
            localStorage.setItem('applicationDraft', JSON.stringify(draftData));

            document.querySelectorAll('.form-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById('step' + currentStep).classList.add('active');
            updateProgress();
            return true;
        }
    } catch (error) {
        console.error('âŒ Error loading from database:', error);
    }
    return false;
}

function restoreFormData(draft) {
    formData = draft;
    if (draft.fullName) document.getElementById('fullName').value = draft.fullName;
    if (draft.phone) document.getElementById('phone').value = draft.phone;
    if (draft.dob) document.getElementById('dob').value = draft.dob;
    if (draft.gender) document.getElementById('gender').value = draft.gender;
    if (draft.address) document.getElementById('address').value = draft.address;
    if (draft.qualification) document.getElementById('qualification').value = draft.qualification;
    if (draft.boardUniversity) document.getElementById('boardUniversity').value = draft.boardUniversity;
    if (draft.passingYear) document.getElementById('passingYear').value = draft.passingYear;
    if (draft.percentage) document.getElementById('percentage').value = draft.percentage;
    if (draft.programType) {
        document.getElementById('programType').value = draft.programType;
        updateCourses();
    }
    if (draft.courseName) document.getElementById('courseName').value = draft.courseName;
}

function startAutoSave() {
    autoSaveTimer = setInterval(() => {
        if (currentStep < 5) {
            saveDraft();
        }
    }, AUTOSAVE_INTERVAL);
}

async function saveDraft() {
    collectCurrentStepData();
    const draftData = {
        ...formData,
        currentStep: currentStep,
        lastSaved: new Date().toISOString()
    };
    localStorage.setItem('applicationDraft', JSON.stringify(draftData));

    try {
        await fetch('/application/save-draft', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(draftData)
        });
    } catch (error) {
        console.error('âš ï¸ Could not save to database:', error);
    }
}

function collectCurrentStepData() {
    if (currentStep === 1) {
        formData.fullName = document.getElementById('fullName').value;
        formData.email = document.getElementById('email').value;
        formData.phone = document.getElementById('phone').value;
        formData.dob = document.getElementById('dob').value;
        formData.gender = document.getElementById('gender').value;
        formData.address = document.getElementById('address').value;
    } else if (currentStep === 2) {
        formData.qualification = document.getElementById('qualification').value;
        formData.boardUniversity = document.getElementById('boardUniversity').value;
        formData.passingYear = document.getElementById('passingYear').value;
        formData.percentage = document.getElementById('percentage').value;
    } else if (currentStep === 3) {
        formData.programType = document.getElementById('programType').value;
        formData.courseName = document.getElementById('courseName').value;
    }
}

function clearDraft() {
    localStorage.removeItem('applicationDraft');
    clearInterval(autoSaveTimer);
    fetch('/application/clear-draft', { method: 'POST' }).catch(err => console.error(err));
}

function updateCourses() {
    const programType = document.getElementById('programType').value;
    const courseSelect = document.getElementById('courseName');
    courseSelect.innerHTML = '<option value="">Select Course</option>';

    if (programType && coursesByType[programType]) {
        coursesByType[programType].forEach(course => {
            const option = document.createElement('option');
            option.value = course;
            option.textContent = course;
            courseSelect.appendChild(option);
        });
    }
}

function updateProgress() {
    document.querySelectorAll('.step').forEach((step, index) => {
        const stepNum = index + 1;
        step.classList.remove('active', 'completed');
        if (stepNum < currentStep) {
            step.classList.add('completed');
        } else if (stepNum === currentStep) {
            step.classList.add('active');
        }
    });
    
    // Update progress line width
    const progressLine = document.querySelector('.progress-line-progress');
    if (progressLine) {
        progressLine.setAttribute('data-step', currentStep);
    }
}

function validateStep(stepNum) {
    if (stepNum === 1) {
        const fullName = document.getElementById('fullName').value.trim();
        const phone = document.getElementById('phone').value.trim();
        const dob = document.getElementById('dob').value;
        const gender = document.getElementById('gender').value;
        const address = document.getElementById('address').value.trim();

        if (!fullName || !phone || !dob || !gender || !address) {
            alert('âŒ Please fill all required fields in Step 1');
            return false;
        }
        if (!/^[0-9]{10}$/.test(phone)) {
            alert('âŒ Please enter a valid 10-digit phone number');
            return false;
        }

        formData.fullName = fullName;
        formData.email = document.getElementById('email').value;
        formData.phone = phone;
        formData.dob = dob;
        formData.gender = gender;
        formData.address = address;
    }

    if (stepNum === 2) {
        const qualification = document.getElementById('qualification').value;
        const boardUniversity = document.getElementById('boardUniversity').value.trim();
        const passingYear = document.getElementById('passingYear').value;
        const percentage = document.getElementById('percentage').value;

        if (!qualification || !boardUniversity || !passingYear || !percentage) {
            alert('âŒ Please fill all required fields in Step 2');
            return false;
        }

        formData.qualification = qualification;
        formData.boardUniversity = boardUniversity;
        formData.passingYear = passingYear;
        formData.percentage = percentage;
    }

    if (stepNum === 3) {
        const programType = document.getElementById('programType').value;
        const courseName = document.getElementById('courseName').value;

        if (!programType || !courseName) {
            alert('âŒ Please select both program type and course');
            return false;
        }

        formData.programType = programType;
        formData.courseName = courseName;
    }

    if (stepNum === 4) {
        if (!uploadedFiles.photo || !uploadedFiles.idProof || !uploadedFiles.certificate) {
            alert('âŒ Please upload all required documents before proceeding');
            return false;
        }
    }

    return true;
}

function nextStep() {
    if (!validateStep(currentStep)) return;
    saveDraft();

    document.getElementById('step' + currentStep).classList.remove('active');
    currentStep++;
    document.getElementById('step' + currentStep).classList.add('active');
    updateProgress();
    window.scrollTo(0, 0);
}

function prevStep() {
    saveDraft();
    document.getElementById('step' + currentStep).classList.remove('active');
    currentStep--;
    document.getElementById('step' + currentStep).classList.add('active');
    updateProgress();
    window.scrollTo(0, 0);
}

function goToStep(stepNum) {
    document.getElementById('step' + currentStep).classList.remove('active');
    currentStep = stepNum;
    document.getElementById('step' + currentStep).classList.add('active');
    updateProgress();
    window.scrollTo(0, 0);
}

function triggerUpload(fileId) {
    document.getElementById(fileId).click();
}

function handleFileUpload(input, previewId) {
    const file = input.files[0];
    if (!file) return;

    if (file.size > 2 * 1024 * 1024) {
        alert('âŒ File size should not exceed 2MB');
        input.value = '';
        return;
    }

    uploadedFiles[input.id] = file;

    const preview = document.getElementById(previewId);
    preview.innerHTML = `
        <div class="file-name">âœ… ${file.name}</div>
        <div class="file-size">${(file.size / 1024).toFixed(2)} KB</div>
    `;
    preview.classList.add('show');
    input.closest('.upload-box').classList.add('uploaded');
}

async function submitApplication() {
    if (!uploadedFiles.photo || !uploadedFiles.idProof || !uploadedFiles.certificate) {
        alert('âŒ Please upload all required documents');
        return;
    }

    const submitBtn = document.getElementById('submitBtn');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';

    try {
        const formDataObj = new FormData();
        Object.keys(formData).forEach(key => {
            formDataObj.append(key, formData[key]);
        });
        Object.keys(uploadedFiles).forEach(key => {
            formDataObj.append(key, uploadedFiles[key]);
        });

        const response = await fetch('/application/submit-application', {
            method: 'POST',
            body: formDataObj
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();

        if (data.success) {
            submittedApplicationId = data.applicationId;
            document.getElementById('appId').textContent = data.applicationId;
            clearDraft();

            document.getElementById('step4').classList.remove('active');
            currentStep = 5;
            document.getElementById('step5').classList.add('active');
            updateProgress();
            window.scrollTo(0, 0);
        } else {
            alert('âŒ ' + (data.message || 'Failed to submit application'));
            submitBtn.disabled = false;
            submitBtn.innerHTML = 'Submit Application <i class="fas fa-check"></i>';
        }
    } catch (error) {
        console.error('âŒ Error:', error);
        alert('âŒ An error occurred: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Submit Application <i class="fas fa-check"></i>';
    }
}

function selectPaymentMethod(method) {
    if (method === 'utr') {
        goToStep(6);
    }
}

async function submitUTR() {
    const utrNumber = document.getElementById('utrNumber').value.trim();
    
    if (!utrNumber || utrNumber.length < 12) {
        document.getElementById('utrError').textContent = 'Please enter a valid UTR number (minimum 12 digits)';
        document.getElementById('utrError').classList.add('show');
        return;
    }

    try {
        const formDataObj = new FormData();
        formDataObj.append('applicationId', submittedApplicationId);
        formDataObj.append('utrNumber', utrNumber);
        
        const proofFile = document.getElementById('transactionProof').files[0];
        if (proofFile) {
            formDataObj.append('transactionProof', proofFile);
        }

        const response = await fetch('/application/submit-utr', {
            method: 'POST',
            body: formDataObj
        });

        const data = await response.json();

        if (data.success) {
            alert('âœ… Payment proof submitted successfully!');
            window.location.href = '/student/dashboard';
        } else {
            document.getElementById('utrError').textContent = data.message || 'Failed to submit UTR';
            document.getElementById('utrError').classList.add('show');
        }
    } catch (error) {
        console.error('âŒ UTR Error:', error);
        document.getElementById('utrError').textContent = 'Network error. Please try again.';
        document.getElementById('utrError').classList.add('show');
    }
}

updateProgress();
</script>

