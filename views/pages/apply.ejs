<%- include('../partials/head') %>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<style>
/* HEADER PROTECTION - Keep header layout intact */
.top-bar,
.header,
.header *,
.top-bar * {
    box-sizing: content-box !important;
}

.header-content {
    flex-wrap: nowrap !important;
    box-sizing: border-box !important;
}

.logo-section,
.nav-container,
.nav-menu {
    box-sizing: border-box !important;
}

/* SCOPED RESET - Only for apply page content */
.apply-hero,
.apply-hero *,
.application-section,
.application-section * {
    box-sizing: border-box;
}

/* Hero Section */
.apply-hero {
    position: relative;
    background: #f8f8f8;
    padding: 140px 0 100px;
    overflow: hidden;
    border-bottom: 2px solid #e5e5e5;
    margin: 0;
}

.apply-hero-content {
    width: 90%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
}

.apply-hero h1 {
    font-size: 72px;
    font-weight: 800;
    color: #1a1a1a;
    margin: 0 0 25px 0;
    letter-spacing: -2px;
    text-transform: uppercase;
    line-height: 1.1;
}

.apply-hero h1 .highlight {
    color: #DC2626;
    position: relative;
    display: inline-block;
}

.apply-hero h1 .highlight::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 4px;
    background: #DC2626;
}

.apply-hero p {
    font-size: 20px;
    color: #666;
    max-width: 700px;
    line-height: 1.8;
    font-weight: 300;
    letter-spacing: 0.3px;
    margin: 0;
}

/* Application Section */
.application-section {
    background: #ffffff;
    padding: 100px 0;
    border-bottom: 2px solid #f0f0f0;
}

.section-container {
    width: 90%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Progress Indicator */
.progress-indicator {
    background: white;
    border: 2px solid #e5e5e5;
    padding: 50px 40px;
    margin-bottom: 50px;
    position: relative;
}

.progress-line-bg {
    position: absolute;
    top: calc(50px + 30px);
    left: 50%;
    transform: translateX(-50%);
    width: calc(100% - 200px);
    max-width: 700px;
    height: 2px;
    background: #e5e5e5;
    z-index: 0;
}

.progress-line-fill {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0%;
    background: #DC2626;
    transition: width 0.5s ease;
}

.step-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
}

.step-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    flex: 1;
}

.step-circle {
    width: 60px;
    height: 60px;
    border: 2px solid #e5e5e5;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: all 0.3s ease;
}

.step-number {
    font-size: 18px;
    font-weight: 700;
    color: #9ca3af;
    transition: all 0.3s ease;
    font-family: 'Montserrat', sans-serif;
}

.step-check {
    display: none;
    font-size: 24px;
    color: white;
}

.step-label {
    font-size: 11px;
    font-weight: 700;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    font-family: 'Montserrat', sans-serif;
    text-align: center;
}

.step-item.active .step-circle {
    background: #DC2626;
    border-color: #DC2626;
    transform: scale(1.15);
}

.step-item.active .step-number {
    color: white;
}

.step-item.active .step-label {
    color: #DC2626;
}

.step-item.completed .step-circle {
    background: #10B981;
    border-color: #10B981;
}

.step-item.completed .step-number {
    display: none;
}

.step-item.completed .step-check {
    display: block;
}

.step-item.completed .step-label {
    color: #10B981;
}

/* Form Container */
.form-container {
    background: white;
    border: 2px solid #e5e5e5;
    padding: 60px;
    position: relative;
}

.form-step {
    display: none;
    animation: fadeInUp 0.4s ease;
}

.form-step.active {
    display: block;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Step Header */
.step-header {
    margin-bottom: 50px;
    padding-bottom: 30px;
    border-bottom: 3px solid #DC2626;
}

.step-header h2 {
    font-size: 38px;
    font-weight: 800;
    color: #1a1a1a;
    letter-spacing: -1px;
    margin: 0 0 10px 0;
    text-transform: uppercase;
    font-family: 'Montserrat', sans-serif;
}

.step-header .highlight {
    color: #DC2626;
}

.step-header p {
    font-size: 15px;
    color: #666;
    font-weight: 300;
    letter-spacing: 0.3px;
    margin: 0;
}

/* Form Grid */
.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-bottom: 50px;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group.full-width {
    grid-column: 1 / -1;
}

.form-group label {
    font-size: 12px;
    font-weight: 700;
    color: #374151;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
}

.form-group input,
.form-group select,
.form-group textarea {
    padding: 16px 18px;
    border: 2px solid #e5e5e5;
    font-size: 14px;
    color: #1a1a1a;
    font-family: 'Roboto', sans-serif;
    transition: all 0.3s ease;
    background: white;
    font-weight: 300;
    border-radius: 0;
    margin: 0;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #DC2626;
    background: #fafafa;
}

.form-group input.error,
.form-group select.error,
.form-group textarea.error {
    border-color: #ef4444;
    background: #fef2f2;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: #9ca3af;
    font-weight: 300;
}

.form-group textarea {
    resize: vertical;
    min-height: 120px;
}

.form-group small {
    font-size: 11px;
    color: #888;
    margin-top: 6px;
    font-weight: 300;
    letter-spacing: 0.3px;
}

/* Upload Grid */
.upload-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 50px;
}

.upload-group {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.upload-label {
    border: 2px dashed #e5e5e5;
    padding: 40px 25px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    background: #fafafa;
    position: relative;
    overflow: hidden;
}

.upload-label::before {
    content: '';
    position: absolute;
    top: -2px;
    right: -2px;
    width: 25px;
    height: 25px;
    background: #DC2626;
    clip-path: polygon(100% 0, 100% 100%, 0 0);
    opacity: 0;
    transition: all 0.3s ease;
}

.upload-label:hover {
    border-color: #DC2626;
    background: white;
}

.upload-label:hover::before {
    opacity: 1;
}

.upload-label input[type="file"] {
    display: none;
}

.upload-icon {
    width: 70px;
    height: 70px;
    background: white;
    border: 2px solid #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.upload-label:hover .upload-icon {
    background: #DC2626;
    border-color: #DC2626;
}

.upload-icon i {
    font-size: 28px;
    color: #6b7280;
    transition: all 0.3s ease;
}

.upload-label:hover .upload-icon i {
    color: white;
}

.upload-title {
    font-size: 12px;
    font-weight: 700;
    color: #1a1a1a;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
}

.upload-info {
    font-size: 11px;
    color: #888;
    font-weight: 300;
    letter-spacing: 0.3px;
}

.file-preview {
    padding: 14px 16px;
    background: white;
    border: 2px solid #e5e5e5;
    font-size: 12px;
    color: #374151;
    display: none;
    word-break: break-all;
    font-weight: 300;
}

.file-preview.show {
    display: block;
}

.file-preview i {
    color: #10B981;
    margin-right: 6px;
}

/* Form Actions */
.form-actions {
    display: flex;
    gap: 20px;
    justify-content: flex-end;
    padding-top: 40px;
    border-top: 2px solid #e5e5e5;
}

.btn {
    padding: 18px 38px;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-family: 'Montserrat', sans-serif;
    border-radius: 0;
    margin: 0;
}

.btn-primary {
    background: #DC2626;
    border-color: #DC2626;
    color: white;
}

.btn-primary:hover {
    background: #B91C1C;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(220, 38, 38, 0.35);
}

.btn-secondary {
    background: transparent;
    border-color: #6b7280;
    color: #6b7280;
}

.btn-secondary:hover {
    background: #6b7280;
    color: white;
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* Payment Success */
.payment-success {
    text-align: center;
    padding: 60px 40px;
}

.success-icon {
    width: 120px;
    height: 120px;
    margin: 0 auto 40px;
    background: #10B981;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes scaleIn {
    from {
        transform: scale(0);
    }
    to {
        transform: scale(1);
    }
}

.success-icon i {
    font-size: 60px;
    color: white;
}

.payment-success h2 {
    font-size: 42px;
    font-weight: 800;
    color: #1a1a1a;
    margin: 0 0 15px 0;
    text-transform: uppercase;
    letter-spacing: -1px;
    font-family: 'Montserrat', sans-serif;
}

.payment-success > p {
    font-size: 16px;
    color: #666;
    margin: 0 0 50px 0;
    font-weight: 300;
    letter-spacing: 0.3px;
}

.application-info {
    background: #fafafa;
    border: 2px solid #e5e5e5;
    padding: 40px;
    margin: 0 auto 40px;
    max-width: 600px;
}

.info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 0;
    border-bottom: 1px solid #e5e5e5;
    margin: 0;
}

.info-row:last-child {
    border-bottom: none;
}

.info-label {
    font-size: 12px;
    font-weight: 700;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
}

.info-value {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
    font-family: 'Montserrat', sans-serif;
}

.status-pending {
    color: #F59E0B !important;
}

.payment-note {
    font-size: 14px;
    color: #666;
    margin: 0 0 40px 0;
    font-weight: 300;
    letter-spacing: 0.3px;
}

.btn-payment {
    background: #FBBF24;
    border-color: #FBBF24;
    color: #1a1a1a;
    padding: 20px 50px;
    font-size: 14px;
}

.btn-payment:hover {
    background: #F59E0B;
    border-color: #F59E0B;
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(251, 191, 36, 0.4);
}

/* Draft Indicator */
.draft-indicator {
    position: fixed;
    bottom: 40px;
    right: 40px;
    background: #10B981;
    color: white;
    padding: 14px 24px;
    font-size: 12px;
    font-weight: 700;
    display: none;
    align-items: center;
    gap: 10px;
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    z-index: 1000;
    animation: slideInUp 0.4s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
}

@keyframes slideInUp {
    from {
        transform: translateY(100px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.draft-indicator.show {
    display: flex;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .upload-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .apply-hero {
        padding: 100px 0 60px;
    }

    .apply-hero h1 {
        font-size: 36px;
    }

    .apply-hero h1 .highlight::after {
        bottom: -4px;
        height: 3px;
    }

    .apply-hero p {
        font-size: 16px;
    }

    .application-section {
        padding: 50px 0;
    }

    .progress-indicator {
        padding: 40px 30px;
    }

    .progress-line-bg {
        top: calc(40px + 25px);
        width: calc(100% - 160px);
        max-width: 600px;
    }

    .step-wrapper {
        max-width: 100%;
    }

    .step-circle {
        width: 50px;
        height: 50px;
    }

    .step-number {
        font-size: 16px;
    }

    .step-check {
        font-size: 22px;
    }

    .step-label {
        font-size: 9px;
        letter-spacing: 0.5px;
    }

    .form-container {
        padding: 40px 30px;
    }

    .step-header h2 {
        font-size: 32px;
    }

    .form-grid {
        grid-template-columns: 1fr;
    }

    .upload-grid {
        grid-template-columns: 1fr;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .payment-success {
        padding: 50px 30px;
    }

    .payment-success h2 {
        font-size: 36px;
    }

    .application-info {
        padding: 35px 30px;
    }

    .info-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
        padding: 15px 0;
    }

    .btn-payment {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .apply-hero h1 {
        font-size: 28px;
        letter-spacing: -1px;
    }

    .apply-hero p {
        font-size: 15px;
    }

    .progress-indicator {
        padding: 30px 20px;
    }

    .progress-line-bg {
        top: calc(30px + 21px);
        width: calc(100% - 100px);
        max-width: 500px;
    }

    .step-circle {
        width: 42px;
        height: 42px;
    }

    .step-number {
        font-size: 14px;
    }

    .step-check {
        font-size: 18px;
    }

    .step-label {
        font-size: 8px;
        letter-spacing: 0.3px;
    }

    .step-item {
        gap: 10px;
    }

    .form-container {
        padding: 30px 20px;
    }

    .step-header {
        margin-bottom: 35px;
        padding-bottom: 20px;
    }

    .step-header h2 {
        font-size: 26px;
    }

    .step-header p {
        font-size: 14px;
    }

    .form-grid {
        gap: 25px;
        margin-bottom: 40px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        padding: 14px 16px;
        font-size: 14px;
    }

    .upload-grid {
        gap: 25px;
        margin-bottom: 40px;
    }

    .upload-label {
        padding: 35px 20px;
    }

    .upload-icon {
        width: 60px;
        height: 60px;
    }

    .upload-icon i {
        font-size: 24px;
    }

    .form-actions {
        padding-top: 30px;
        gap: 15px;
    }

    .btn {
        padding: 16px 30px;
        font-size: 12px;
    }

    .payment-success {
        padding: 40px 20px;
    }

    .success-icon {
        width: 100px;
        height: 100px;
        margin-bottom: 35px;
    }

    .success-icon i {
        font-size: 50px;
    }

    .payment-success h2 {
        font-size: 28px;
    }

    .payment-success > p {
        font-size: 15px;
        margin-bottom: 35px;
    }

    .application-info {
        padding: 30px 20px;
    }

    .info-label {
        font-size: 11px;
    }

    .info-value {
        font-size: 16px;
    }

    .payment-note {
        font-size: 13px;
        margin-bottom: 30px;
    }

    .btn-payment {
        padding: 18px 30px;
        font-size: 13px;
    }

    .draft-indicator {
        bottom: 20px;
        right: 20px;
        font-size: 11px;
        padding: 12px 18px;
    }
}
</style>

<body>
  <%- include('../partials/header') %>
  
  <main>
    <!-- Hero Section -->
    <section class="apply-hero">
      <div class="apply-hero-content">
        <h1>APPLY <span class="highlight">ONLINE</span></h1>
        <p>Begin your journey with Swaminarayan University - Where excellence meets opportunity.</p>
      </div>
    </section>

    <!-- Application Section -->
    <section class="application-section">
      <div class="section-container">
        
        <!-- Progress Indicator -->
        <div class="progress-indicator">
          <div class="progress-line-bg">
            <div class="progress-line-fill" id="progressLineFill"></div>
          </div>
          <div class="step-wrapper">
            <div class="step-item active" data-step="1">
              <div class="step-circle">
                <span class="step-number">01</span>
                <i class="fas fa-check step-check"></i>
              </div>
              <span class="step-label">Personal</span>
            </div>
            <div class="step-item" data-step="2">
              <div class="step-circle">
                <span class="step-number">02</span>
                <i class="fas fa-check step-check"></i>
              </div>
              <span class="step-label">Academic</span>
            </div>
            <div class="step-item" data-step="3">
              <div class="step-circle">
                <span class="step-number">03</span>
                <i class="fas fa-check step-check"></i>
              </div>
              <span class="step-label">Program</span>
            </div>
            <div class="step-item" data-step="4">
              <div class="step-circle">
                <span class="step-number">04</span>
                <i class="fas fa-check step-check"></i>
              </div>
              <span class="step-label">Documents</span>
            </div>
            <div class="step-item" data-step="5">
              <div class="step-circle">
                <span class="step-number">05</span>
                <i class="fas fa-check step-check"></i>
              </div>
              <span class="step-label">Payment</span>
            </div>
          </div>
        </div>

        <!-- Form Container -->
        <div class="form-container">
          <form id="applicationForm" enctype="multipart/form-data">
            
            <!-- Step 1: Personal Details -->
            <div class="form-step active" data-step="1">
              <div class="step-header">
                <h2>PERSONAL <span class="highlight">DETAILS</span></h2>
                <p>Tell us about yourself</p>
              </div>

              <div class="form-grid">
                <div class="form-group full-width">
                  <label for="fullName">Full Name *</label>
                  <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required>
                </div>

                <div class="form-group">
                  <label for="email">Email Address *</label>
                  <input type="email" id="email" name="email" placeholder="your.email@example.com" required>
                </div>

                <div class="form-group">
                  <label for="phone">Phone Number *</label>
                  <input type="tel" id="phone" name="phone" pattern="[6-9][0-9]{9}" placeholder="10-digit mobile number" required>
                  <small>Enter 10-digit Indian mobile number</small>
                </div>

                <div class="form-group">
                  <label for="dateOfBirth">Date of Birth *</label>
                  <input type="date" id="dateOfBirth" name="dateOfBirth" required>
                </div>

                <div class="form-group">
                  <label for="gender">Gender *</label>
                  <select id="gender" name="gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div class="form-group full-width">
                  <label for="address">Address *</label>
                  <textarea id="address" name="address" placeholder="Enter your complete address" required></textarea>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" class="btn btn-primary" onclick="saveAndNext(2)">
                  CONTINUE <i class="fas fa-arrow-right"></i>
                </button>
              </div>
            </div>

            <!-- Step 2: Academic Details -->
            <div class="form-step" data-step="2">
              <div class="step-header">
                <h2>ACADEMIC <span class="highlight">DETAILS</span></h2>
                <p>Your educational background</p>
              </div>

              <div class="form-grid">
                <div class="form-group">
                  <label for="qualification">Highest Qualification *</label>
                  <select id="qualification" name="qualification" required>
                    <option value="">Select Qualification</option>
                    <option value="10th">10th Standard</option>
                    <option value="12th">12th Standard</option>
                    <option value="Diploma">Diploma</option>
                    <option value="Undergraduate">Undergraduate</option>
                    <option value="Postgraduate">Postgraduate</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="boardUniversity">Board/University *</label>
                  <input type="text" id="boardUniversity" name="boardUniversity" placeholder="e.g., CBSE, Gujarat Board" required>
                </div>

                <div class="form-group">
                  <label for="yearOfPassing">Year of Passing *</label>
                  <input type="number" id="yearOfPassing" name="yearOfPassing" min="1990" max="2025" placeholder="YYYY" required>
                </div>

                <div class="form-group">
                  <label for="percentage">Percentage/CGPA *</label>
                  <input type="number" id="percentage" name="percentage" min="0" max="100" step="0.01" placeholder="e.g., 85.5" required>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="prevStep(1)">
                  <i class="fas fa-arrow-left"></i> BACK
                </button>
                <button type="button" class="btn btn-primary" onclick="saveAndNext(3)">
                  CONTINUE <i class="fas fa-arrow-right"></i>
                </button>
              </div>
            </div>

            <!-- Step 3: Program Selection -->
            <div class="form-step" data-step="3">
              <div class="step-header">
                <h2>PROGRAM <span class="highlight">SELECTION</span></h2>
                <p>Choose your desired course</p>
              </div>

              <div class="form-grid">
                <div class="form-group full-width">
                  <label for="programType">Program Type *</label>
                  <select id="programType" name="programType" required onchange="updateCourses()">
                    <option value="">Select Program Type</option>
                    <option value="Diploma">Diploma</option>
                    <option value="Undergraduate">Undergraduate</option>
                    <option value="Postgraduate">Postgraduate</option>
                    <option value="PhD">Ph.D.</option>
                  </select>
                </div>

                <div class="form-group full-width">
                  <label for="courseName">Course Name *</label>
                  <select id="courseName" name="courseName" required>
                    <option value="">Select program type first</option>
                  </select>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="prevStep(2)">
                  <i class="fas fa-arrow-left"></i> BACK
                </button>
                <button type="button" class="btn btn-primary" onclick="saveAndNext(4)">
                  CONTINUE <i class="fas fa-arrow-right"></i>
                </button>
              </div>
            </div>

            <!-- Step 4: Document Upload -->
            <div class="form-step" data-step="4">
              <div class="step-header">
                <h2>DOCUMENT <span class="highlight">UPLOAD</span></h2>
                <p>Upload required documents</p>
              </div>

              <div class="upload-grid">
                <div class="upload-group">
                  <label class="upload-label">
                    <div class="upload-icon">
                      <i class="fas fa-image"></i>
                    </div>
                    <span class="upload-title">Passport Photo *</span>
                    <span class="upload-info">JPG/PNG, Max 2MB</span>
                    <input type="file" id="photo" name="photo" accept="image/jpeg,image/png" required onchange="handleFileSelect(this, 'photoPreview')">
                  </label>
                  <div class="file-preview" id="photoPreview"></div>
                </div>

                <div class="upload-group">
                  <label class="upload-label">
                    <div class="upload-icon">
                      <i class="fas fa-id-card"></i>
                    </div>
                    <span class="upload-title">ID Proof *</span>
                    <span class="upload-info">Aadhar/PAN, Max 2MB</span>
                    <input type="file" id="idProof" name="idProof" accept="image/jpeg,image/png,application/pdf" required onchange="handleFileSelect(this, 'idProofPreview')">
                  </label>
                  <div class="file-preview" id="idProofPreview"></div>
                </div>

                <div class="upload-group">
                  <label class="upload-label">
                    <div class="upload-icon">
                      <i class="fas fa-certificate"></i>
                    </div>
                    <span class="upload-title">Certificate *</span>
                    <span class="upload-info">Mark Sheet, Max 2MB</span>
                    <input type="file" id="academicCertificate" name="academicCertificate" accept="application/pdf,image/jpeg,image/png" required onchange="handleFileSelect(this, 'academicCertificatePreview')">
                  </label>
                  <div class="file-preview" id="academicCertificatePreview"></div>
                </div>
              </div>

              <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="prevStep(3)">
                  <i class="fas fa-arrow-left"></i> BACK
                </button>
                <button type="button" class="btn btn-primary" onclick="submitApplication()">
                  SUBMIT <i class="fas fa-check"></i>
                </button>
              </div>
            </div>

            <!-- Step 5: Payment -->
            <div class="form-step" data-step="5">
              <div class="payment-success">
                <div class="success-icon">
                  <i class="fas fa-check-circle"></i>
                </div>
                <h2>APPLICATION <span class="highlight">SUBMITTED</span></h2>
                <p>Your application has been successfully submitted</p>

                <div class="application-info">
                  <div class="info-row">
                    <span class="info-label">Application Number</span>
                    <span class="info-value" id="displayApplicationId">-</span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">Application Fee</span>
                    <span class="info-value">₹500</span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">Status</span>
                    <span class="info-value status-pending">Payment Pending</span>
                  </div>
                </div>

                <p class="payment-note">Complete your payment to finalize the application process</p>

                <button type="button" class="btn btn-payment" id="payButton" onclick="initiatePayment()">
                  <i class="fas fa-credit-card"></i> PAY ₹500 NOW
                </button>
              </div>
            </div>

          </form>
        </div>

        <!-- Draft Saved Indicator -->
        <div class="draft-indicator" id="draftIndicator">
          <i class="fas fa-save"></i> Draft Saved
        </div>

      </div>
    </section>

  </main>
  
  <%- include('../partials/footer') %>
  
  <script src="/js/apply.js"></script>
</body>
</html>
