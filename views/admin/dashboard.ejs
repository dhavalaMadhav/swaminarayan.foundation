<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #DC2626;
            --primary-dark: #B91C1C;
            --secondary: #4B5563;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
            --light: #F9FAFB;
            --dark: #1F2937;
            --border: #E5E7EB;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: white;
            border-right: 1px solid var(--border);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 25px 20px;
            background: var(--primary);
            color: white;
            text-align: center;
        }

        .sidebar-header h2 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .sidebar-header p {
            font-size: 12px;
            opacity: 0.9;
        }

        .admin-info {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid var(--border);
        }

        .admin-avatar {
            width: 70px;
            height: 70px;
            background: var(--primary);
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            font-weight: 600;
        }

        .admin-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .admin-email {
            font-size: 12px;
            color: var(--secondary);
            margin-bottom: 10px;
        }

        .admin-role {
            display: inline-block;
            padding: 4px 12px;
            background: var(--light);
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            color: var(--primary);
        }

        .nav-menu {
            padding: 20px 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: var(--secondary);
            text-decoration: none;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }

        .nav-item:hover {
            background: var(--light);
            color: var(--primary);
            border-left-color: var(--primary);
        }

        .nav-item.active {
            background: var(--light);
            color: var(--primary);
            border-left-color: var(--primary);
            font-weight: 600;
        }

        .nav-icon {
            width: 24px;
            margin-right: 12px;
            text-align: center;
        }

        .nav-text {
            font-size: 14px;
        }

        .logout-item {
            margin-top: 20px;
            border-top: 1px solid var(--border);
            padding-top: 20px;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            margin-bottom: 30px;
            border-bottom: 1px solid var(--border);
        }

        .top-bar h1 {
            font-size: 24px;
            font-weight: 600;
            color: var(--dark);
        }

        .top-bar-actions {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .logout-btn {
            padding: 8px 16px;
            background: var(--danger);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .logout-btn:hover {
            background: #DC2626;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s;
            border: 1px solid var(--border);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .stat-card.total {
            border-top: 4px solid var(--primary);
        }

        .stat-card.paid {
            border-top: 4px solid var(--success);
        }

        .stat-card.pending {
            border-top: 4px solid var(--warning);
        }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .stat-title {
            font-size: 14px;
            font-weight: 600;
            color: var(--secondary);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-icon.total {
            background: rgba(220, 38, 38, 0.1);
            color: var(--primary);
        }

        .stat-icon.paid {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .stat-icon.pending {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning);
        }

        .stat-value {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .stat-change {
            font-size: 14px;
            color: var(--secondary);
        }

        .stat-change.positive {
            color: var(--success);
        }

        .stat-change.negative {
            color: var(--danger);
        }

        /* Recent Applicants */
        .section {
            background: white;
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid var(--border);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--dark);
        }

        .view-all {
            padding: 8px 16px;
            background: var(--primary);
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .view-all:hover {
            background: var(--primary-dark);
        }

        .table-responsive {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            padding: 12px 15px;
            font-weight: 600;
            color: var(--secondary);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid var(--border);
        }

        td {
            padding: 15px;
            border-bottom: 1px solid var(--border);
            font-size: 14px;
        }

        tr:hover {
            background: var(--light);
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .status-submitted {
            background: rgba(59, 130, 246, 0.1);
            color: #3B82F6;
        }

        .status-under_review {
            background: rgba(245, 158, 11, 0.1);
            color: #F59E0B;
        }

        .status-accepted {
            background: rgba(16, 185, 129, 0.1);
            color: #10B981;
        }

        .status-rejected {
            background: rgba(239, 68, 68, 0.1);
            color: #EF4444;
        }

        .status-on_hold {
            background: rgba(107, 114, 128, 0.1);
            color: #6B7280;
        }

        .payment-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .payment-pending {
            background: rgba(245, 158, 11, 0.1);
            color: #F59E0B;
        }

        .payment-paid {
            background: rgba(16, 185, 129, 0.1);
            color: #10B981;
        }

        .payment-failed {
            background: rgba(239, 68, 68, 0.1);
            color: #EF4444;
        }

        .payment-under_verification {
            background: rgba(59, 130, 246, 0.1);
            color: #3B82F6;
        }

        .action-btn {
            padding: 6px 12px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 12px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .action-btn:hover {
            background: var(--primary-dark);
        }

        /* Quick Actions */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .action-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            text-align: center;
            text-decoration: none;
            color: var(--dark);
            transition: all 0.3s;
            border: 1px solid var(--border);
        }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-color: var(--primary);
        }

        .action-icon {
            width: 60px;
            height: 60px;
            background: rgba(220, 38, 38, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: var(--primary);
            font-size: 24px;
        }

        .action-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .action-desc {
            font-size: 14px;
            color: var(--secondary);
        }

        /* Charts */
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-container {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid var(--border);
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .stats-grid,
            .charts-grid {
                grid-template-columns: 1fr;
            }

            .quick-actions {
                grid-template-columns: 1fr;
            }

            .mobile-menu-btn {
                display: block;
                position: fixed;
                top: 20px;
                left: 20px;
                z-index: 1001;
                background: var(--primary);
                color: white;
                border: none;
                border-radius: 6px;
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 20px;
                cursor: pointer;
            }
        }

        /* Mobile menu button */
        .mobile-menu-btn {
            display: none;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .sidebar {
                width: 220px;
            }

            .main-content {
                margin-left: 220px;
            }
        }

        @media (max-width: 768px) {
            .mobile-menu-btn {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <button class="mobile-menu-btn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-university"></i> Admin Panel</h2>
                <p>Swaminarayan University</p>
            </div>

            <div class="admin-info">
                <div class="admin-avatar">
                    <%= admin.name.charAt(0).toUpperCase() %>
                </div>
                <div class="admin-name"><%= admin.name %></div>
                <div class="admin-email"><%= admin.email %></div>
                <div class="admin-role"><%= admin.role %></div>
            </div>

            <div class="nav-menu">
                <a href="/admin/dashboard" class="nav-item active">
                    <div class="nav-icon">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <div class="nav-text">Dashboard</div>
                </a>

                <a href="/admin/applicants" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="nav-text">All Applicants</div>
                </a>

                <a href="/admin/export" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-download"></i>
                    </div>
                    <div class="nav-text">Export Data</div>
                </a>

                <a href="/admin/settings" class="nav-item">
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="nav-text">Settings</div>
                </a>

                <div class="logout-item">
                    <a href="/admin/logout" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <div class="nav-text">Logout</div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="top-bar">
                <h1><i class="fas fa-tachometer-alt"></i> Dashboard Overview</h1>
                <div class="top-bar-actions">
                    <span><%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                    <button class="logout-btn" onclick="logout()">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card total">
                    <div class="stat-header">
                        <div class="stat-title">Total Applicants</div>
                        <div class="stat-icon total">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="stat-value"><%= stats.total %></div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> All applications
                    </div>
                </div>

                <div class="stat-card paid">
                    <div class="stat-header">
                        <div class="stat-title">Paid Applications</div>
                        <div class="stat-icon paid">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <div class="stat-value"><%= stats.paid %></div>
                    <div class="stat-change">
                        <%= ((stats.paid / stats.total) * 100).toFixed(1) %>% of total
                    </div>
                </div>

                <div class="stat-card pending">
                    <div class="stat-header">
                        <div class="stat-title">Pending Payment</div>
                        <div class="stat-icon pending">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                    <div class="stat-value"><%= stats.pending %></div>
                    <div class="stat-change">
                        <%= ((stats.pending / stats.total) * 100).toFixed(1) %>% of total
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="section">
                <div class="section-header">
                    <div class="section-title">Quick Actions</div>
                </div>
                <div class="quick-actions">
                    <a href="/admin/applicants" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="action-title">View All Applicants</div>
                        <div class="action-desc">Browse and manage all applications</div>
                    </a>

                    <a href="/admin/applicants?paymentStatus=pending" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                        <div class="action-title">Pending Payments</div>
                        <div class="action-desc">Review applications awaiting payment</div>
                    </a>

                    <a href="/admin/export" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-file-export"></i>
                        </div>
                        <div class="action-title">Export Data</div>
                        <div class="action-desc">Download applications as CSV</div>
                    </a>

                    <a href="/admin/settings" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-user-cog"></i>
                        </div>
                        <div class="action-title">Account Settings</div>
                        <div class="action-desc">Update profile and password</div>
                    </a>
                </div>
            </div>

            <!-- Recent Applicants -->
            <div class="section">
                <div class="section-header">
                    <div class="section-title">Recent Applications</div>
                    <a href="/admin/applicants" class="view-all">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Name</th>
                                <th>Course</th>
                                <th>Payment</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentApplicants.forEach(applicant => { %>
                                <tr>
                                    <td><strong><%= applicant.applicationId %></strong></td>
                                    <td><%= applicant.fullName %></td>
                                    <td><%= applicant.courseName || 'N/A' %></td>
                                    <td>
                                        <span class="payment-badge payment-<%= applicant.paymentStatus %>">
                                            <%= applicant.paymentStatus %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= applicant.status %>">
                                            <%= applicant.status.replace('_', ' ') %>
                                        </span>
                                    </td>
                                    <td><%= applicant.createdAt.toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/applicant/<%= applicant._id %>" class="action-btn">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- All Applicants Table -->
            <div class="section">
                <div class="section-header">
                    <div class="section-title">All Applications</div>
                    <a href="/admin/applicants" class="view-all">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Payment</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% applicants.forEach(applicant => { %>
                                <tr>
                                    <td><strong><%= applicant.applicationId %></strong></td>
                                    <td><%= applicant.fullName %></td>
                                    <td><%= applicant.email %></td>
                                    <td><%= applicant.phone %></td>
                                    <td>
                                        <span class="payment-badge payment-<%= applicant.paymentStatus %>">
                                            <%= applicant.paymentStatus %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= applicant.status %>">
                                            <%= applicant.status.replace('_', ' ') %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/admin/applicant/<%= applicant._id %>" class="action-btn">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        function logout() {
            window.location.href = '/admin/logout';
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const mobileBtn = document.querySelector('.mobile-menu-btn');
            
            if (window.innerWidth <= 768 && 
                !sidebar.contains(event.target) && 
                !mobileBtn.contains(event.target)) {
                sidebar.classList.remove('active');
            }
        });

        // Auto-refresh dashboard every 5 minutes
        setInterval(() => {
            window.location.reload();
        }, 5 * 60 * 1000);
    </script>
</body>
</html>